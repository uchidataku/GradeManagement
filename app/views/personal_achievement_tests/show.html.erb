<% provide(:title, "定期考査") %>
<main class="row">
  <aside class="col-md-2 sidebar">
    <%= render 'layouts/sidebar' %>
  </aside>
  <article class="col-xs-12 col-md-9 maincontent">
    <header>
      <div class="registration_title">
        <h3>《定期考査結果》</h3>
        <h5>[<%= @testpoint.periodical_inspection.name %>]</h5>
      </div>
    </header>
    <section>
      <div class="row">
        <div class="col-md-12 subjectitem">
          <div class="col-md-3 testpoint-boxlist">
            科目
          </div>
          <div class="col-md-3 testpoint-boxlist">
            得点
          </div>
          <div class="col-md-3 testpoint-boxlist">
            平均点
          </div>
          <div class="col-md-3 testpoint-boxlist">
            平均点比較
          </div>
        </div>
        <div class="col-md-12 subjectitem">
          <div class="col-md-3 testpoint-boxitem">
            <h5>国語</h5>
          </div>
          <div class="col-md-3 testpoint-boxitem">
            <h5><%= @testpoint.japanese %></h5>
          </div>
          <div class="col-md-3 testpoint-boxitem">
            <%= @testpoint.average_japanese %>
          </div>
          <% if @testpoint.japanese-@testpoint.average_japanese >0 %>
            <div class="col-md-3 testpoint-boxitem ave-comparison" style="color: blue">
              <%= @testpoint.japanese-@testpoint.average_japanese %>
            </div>
          <% else %>
            <div class="col-md-3 testpoint-boxitem ave-comparison" style="color: red">
              <%= @testpoint.japanese-@testpoint.average_japanese %>
            </div>
          <% end %>
        </div>
        <div class="col-md-12 subjectitem">
          <div class="col-md-3 testpoint-boxitem">
            <h5>数学</h5>
          </div>
