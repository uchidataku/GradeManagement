            </div>
          <% else %>
            <div class="col-md-3 testpoint-boxitem ave-comparison" style="color: red">
              <%= @testpoint.mathematics-@testpoint.average_mathematics %>
            </div>
          <% end %>
        </div>
        <div class="col-md-12 subjectitem">
          <div class="col-md-3 testpoint-boxitem">
            <h5>英語</h5>
          </div>
