<% provide(:title, "ログイン") %>
<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %><br />

    <%= f.label :password, "パスワード" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %><br />

  <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "ログインしたままにする" %><br />
  <% end %>
  
    <%= f.submit "ログイン" %>
<% end %>
<%= link_to "未登録の方はこちら", new_user_registration_path %>
